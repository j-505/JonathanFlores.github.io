#include <Servo.h>
Servo servo1;
Servo servo2;
Servo servo3;
Servo servo4;
Servo servo5;
int i=0;

void setup() {

  servo1.attach(3);
  servo2.attach(5);
  servo3.attach(6);
  servo4.attach(10);
  servo5.attach(4);
  
  servo1.write(180);
  servo2.write(0);
  servo3.write(0);
  servo4.write(120);

    Serial.begin(9600);
}
void loop() {


  if(Serial.available() > 0)
  {
    char data;
    data = Serial.read();
    Serial.println(data);

  
  if(data == '1'){
    for (int i = 0; i < 170; i++){
        servo1.write(i);   
        delay(1);          
      }
        for (int i = 70; i > 0; i--) {                
        servo3.write(i);
        delay(5);
      }
        for (int i = 150; i > 0; i--) {
        servo2.write(i);   
        delay(1);        
      }
        for (int i = 40; i < 140; i++) {                
        servo4.write(i);
        delay(5);
      }  

  }

 else if(data == '3'){
     for (int i = 140 ; i > 40; i--){
        servo3.write(i);   
        delay(10);        
      }
      
      for (int i = 90; i < 140; i++) {
        servo2.write(i);
        servo4.write(i);   
        delay(10);          
      }
      
  }
  
  else if(data == '2'){
      for(int i = 120; i > 0; i--){
        servo4.write(i);         
        delay(5);
      }
      for(int i = 0; i<150;i++){
        servo3.write(i);
        delay(5);
      }
      for(int i = 180; i > 60; i--){
         servo1.write(i);
        delay(5); 
      }
  }    
   else if(data == '4'){
    servo1.write(40);
    servo3.write(70);
    servo2.write(150);
    servo4.write(0);
    delay(150);  
          
  } 
  
  else{
  servo1.write(180);
  servo2.write(0);
  servo3.write(0);
  servo4.write(120);
  
  }
}
}

  
